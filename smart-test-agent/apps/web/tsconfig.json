{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "noEmit": true,
    "composite": false,
    "incremental": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@smart-test-agent/shared": ["../../packages/shared/src/index.ts"],
      "@smart-test-agent/shared/*": ["../../packages/shared/src/*"],
      "@smart-test-agent/server": ["../server/src/index.ts"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "../../packages/shared" }
  ]
}

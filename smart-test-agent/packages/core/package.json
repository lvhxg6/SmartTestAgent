{
  "name": "@smart-test-agent/core",
  "version": "0.1.0",
  "private": true,
  "description": "Core business logic for Smart Test Agent",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./orchestrator": {
      "types": "./dist/orchestrator/index.d.ts",
      "import": "./dist/orchestrator/index.js"
    },
    "./source-indexer": {
      "types": "./dist/source-indexer/index.d.ts",
      "import": "./dist/source-indexer/index.js"
    },
    "./cli-adapter": {
      "types": "./dist/cli-adapter/index.d.ts",
      "import": "./dist/cli-adapter/index.js"
    },
    "./quality-gate": {
      "types": "./dist/quality-gate/index.d.ts",
      "import": "./dist/quality-gate/index.js"
    },
    "./report-generator": {
      "types": "./dist/report-generator/index.d.ts",
      "import": "./dist/report-generator/index.js"
    },
    "./target-profile": {
      "types": "./dist/target-profile/index.d.ts",
      "import": "./dist/target-profile/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint . --ext ts --report-unused-disable-directives --max-warnings 0",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:property": "vitest run --config vitest.property.config.ts",
    "clean": "rm -rf dist node_modules .turbo"
  },
  "dependencies": {
    "@smart-test-agent/db": "workspace:*",
    "@smart-test-agent/shared": "workspace:*",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "fast-check": "^3.14.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
